<UserControl x:Class="cal.dayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cal"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button
            HorizontalAlignment="Center"
            Height="90"
            Style="{StaticResource MaterialDesignPaperDarkButton}" Click="Button_Click">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="dayNum" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Center"/>
                <Image x:Name="iimg"  Width="50" Height="50" VerticalAlignment="Bottom" Margin="5"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
